<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nativdemo.nativdemo.nativdemo.Activities.LoginActivity"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColorHint="@android:color/black"
            android:backgroundTint="@android:color/white"
            android:hint="@string/login_username_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColorHint="@android:color/black"
            android:backgroundTint="@android:color/white"
            android:hint="@string/login_password_hint" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/login_login_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="6dp"
            android:weightSum="2">

            <Button
                android:id="@+id/login_button"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/login_login_button"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="@drawable/login_button"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_touch_id_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="right"
            android:padding="6dp"
            android:weightSum="2">

            <Button
                android:id="@+id/login_touch_id"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="@string/login_touch_id"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:background="@drawable/touch_id_button"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
